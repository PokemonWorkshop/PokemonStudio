{
  "compilerOptions": {
    "target": "ES2021",
    "allowJs": true,
    "strict": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "paths": {
      "*": ["node_modules/*"],
      "@components/*": ["src/views/components/*"],
      "@ds/*": ["src/designSystem/*"],
      "@pages/*": ["src/views/pages/*"],
      "@modelEntities/*": ["src/models/entities/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["assets/*"],
      "@src/*": ["src/*"],
      "react": ["./node_modules/@types/react"]
    }
  },
  "include": ["src/**/*", "config/**/*", "forge.config.ts"]
}
